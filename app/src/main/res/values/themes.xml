<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0A1BAA</item>
        <item name="colorPrimaryVariant">#0A1BAA</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorOnBackground">#0E0606</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_700</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">#FFFFFF</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="colorControlNormal">#00000000</item>
        <item name="colorControlActivated">#120707</item>

    </style>

    <style name="MyActionBar" parent="@style/Theme.Material3.Light">
        <item name="android:background">@color/white</item>
    </style>

    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomLeft">8dp</item>
        <item name="cornerSizeBottomRight">8dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_daily_news_svg</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">600</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.NewsApp</item>
    </style>

</resources>