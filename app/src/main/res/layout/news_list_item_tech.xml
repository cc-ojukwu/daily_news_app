<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="newsItem"
            type="com.chrisojukwu.newsapp.NewsItem" />

    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_tech_news_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/background_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="8dp">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/image_view_tech"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:imageViewUrl="@{newsItem.image_url}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:shapeAppearanceOverlay="@style/ImageView.Corner"
                tools:src="@drawable/sport_image" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_background" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="8dp"
                android:ellipsize="end"
                android:text="@{newsItem.title}"
                android:textColor="@color/white"
                android:textSize="24sp"
                tools:text="Liverpool maul weak Bournemouth at Anfield Stadium" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>